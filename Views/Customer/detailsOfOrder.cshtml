@model List<WebApplication1.Models.OrderedProduct>
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Listed Products | Brand Owner Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --color-primary: #7380ec;
            --color-success: #00d68f;
            --color-danger: #ff5b5b;
            --color-dark: #2d2d2d;
            --card-border-radius: 12px;
            --box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f5f7fb;
            color: var(--color-dark);
        }

        .page-header h1 {
            font-weight: 700;
            color: var(--color-primary);
        }

        .card {
            border: none;
            border-radius: var(--card-border-radius);
            box-shadow: var(--box-shadow);
        }

        .table thead th {
            background-color: var(--color-primary);
            color: white;
            padding: 15px;
        }

        .table tbody tr:hover {
            background-color: rgba(115, 128, 236, 0.05);
        }

        .table td {
            vertical-align: middle;
            padding: 15px;
        }

        .product-img {
            width: 60px;
            height: 60px;
            object-fit: cover;
            border-radius: 8px;
            border: 1px solid rgba(0, 0, 0, 0.1);
        }

        .badge-category {
            background-color: rgba(115, 128, 236, 0.1);
            color: var(--color-primary);
            font-weight: 500;
            padding: 5px 12px;
            border-radius: 20px;
        }

        .stock-in {
            color: var(--color-success);
            font-weight: 600;
        }

        .stock-out {
            color: var(--color-danger);
            font-weight: 600;
        }

        /* Responsive Table */
        @@media (max-width: 768px) {
            .table thead

        {
            display: none;
        }

        .table tbody tr {
            display: block;
            margin-bottom: 1rem;
            border: 1px solid #ccc;
            border-radius: 10px;
            padding: 10px;
            background: white;
        }

        .table td {
            display: flex;
            justify-content: space-between;
            align-items: center;
            text-align: right;
            padding-left: 50%;
            position: relative;
            border: none;
        }

            .table td::before {
                content: attr(data-label);
                position: absolute;
                left: 15px;
                width: 45%;
                font-weight: 600;
                text-align: left;
                color: var(--color-dark);
            }

        }
    </style>
</head>
<body>
    <div class="container py-5">
        <div class="page-header text-center mb-4">
            <h1>Details of Order</h1>
        </div>
        <div class="card">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Product Name</th>
                                <th>Size</th>
                                <th>Price</th>
                                <th>Quantity</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model)
                            {
                                <tr>
                                    <td data-label="Image">
                                        <img src="~/@product.ProductThumbnailURL" alt="@product.ProductName" class="product-img">
                                    </td>
                                    <td data-label="Product Name">
                                        <strong>@product.ProductName</strong>
                                    </td>
                                    <td data-label="Product Size">@product.Size</td>
                                    <td data-label="Category">
                                        <span class="badge-category">@product.Price</span>
                                    </td>
                                    <td data-label="Quantity" class="badge-category">
                                        @product.Quantity
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
