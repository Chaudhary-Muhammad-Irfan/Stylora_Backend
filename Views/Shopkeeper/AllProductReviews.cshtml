@model System.Data.DataTable
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Your All Product Reviews</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .container-custom {
            margin-top: 50px;
            background-color: #ffffff;
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .table thead {
            background-color: #0d6efd;
            color: #fff;
        }

        .table tbody tr:hover {
            background-color: #f1f1f1;
        }

        .table th, .table td {
            vertical-align: middle;
        }

        .title {
            text-align: center;
            font-weight: bold;
            margin-bottom: 25px;
            color: #0d6efd;
        }

        .no-reviews {
            text-align: center;
            color: #6c757d;
            font-size: 1.1rem;
            margin-top: 20px;
        }

        .star {
            color: gold;
        }

        .star-empty {
            color: #ccc;
        }

        @@media (max-width: 768px) {
            .table-responsive

        {
            overflow-x: auto;
        }

        }
    </style>
</head>
<body>
    <div class="container container-custom">
        <h2 class="title">All Product Reviews</h2>
        <div class="table-responsive">
            @if (Model != null && Model.Rows.Count > 0)
            {
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Customer Name</th>
                            <th>Email</th>
                            <th>Product Name</th>
                            <th>Product Code</th>
                            <th>Rating</th>
                            <th>Message</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (System.Data.DataRow row in Model.Rows)
                        {
                            var rating = Convert.ToInt32(row["Rating"]);
                            var isRead = Convert.ToInt32(row["isRead"]);
                            var rowClass = isRead == 0 ? "fw-bold" : "";
                            <tr class="@rowClass">
                                <td>@row["Name"]</td>
                                <td>@row["Email"]</td>
                                <td>@row["productName"]</td>
                                <td>@row["productCode"]</td>
                                <td>
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        if (i <= rating)
                                        {
                                            <span class="star">&#9733;</span> <!-- filled star -->
                                        }
                                        else
                                        {
                                            <span class="star-empty">&#9733;</span> <!-- empty star -->
                                        }
                                    }
                                </td>
                                <td>@row["Comment"]</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="no-reviews">No reviews available for your products yet.</div>
            }
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>