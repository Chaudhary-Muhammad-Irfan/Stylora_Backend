@model List<Product>
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Listed Products | Brand Owner Dashboard</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --color-primary: #7380ec;
            --color-danger: #ff5b5b;
            --color-success: #00d68f;
            --color-warning: #ffb400;
            --color-dark: #2d2d2d;
            --color-light: rgba(132, 139, 200, 0.18);
            --color-light-gray: #f8f9fa;
            --card-border-radius: 12px;
            --box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f5f7fb;
            color: var(--color-dark);
        }

        .page-header {
            position: relative;
            padding-bottom: 20px;
            margin-bottom: 30px;
        }

            .page-header h1 {
                font-weight: 700;
                color: var(--color-primary);
                position: relative;
                display: inline-block;
            }

                .page-header h1:after {
                    content: '';
                    position: absolute;
                    bottom: -10px;
                    left: 50%;
                    transform: translateX(-50%);
                    width: 80px;
                    height: 4px;
                    background: var(--color-primary);
                    border-radius: 2px;
                }

        .product-count {
            font-size: 1.1rem;
            color: var(--color-dark);
        }

            .product-count span {
                color: var(--color-primary);
                font-weight: 600;
            }

        .card {
            border: none;
            border-radius: var(--card-border-radius);
            box-shadow: var(--box-shadow);
            overflow: hidden;
        }

        .table thead th {
            background-color: var(--color-primary);
            color: white;
            border: none;
            font-weight: 500;
            padding: 15px 20px;
        }

        .table tbody tr {
            transition: all 0.3s ease;
        }

            .table tbody tr:hover {
                background-color: rgba(115, 128, 236, 0.05);
                transform: translateY(-2px);
            }

        .table td {
            vertical-align: middle;
            padding: 15px 20px;
            border-top: 1px solid rgba(0, 0, 0, 0.03);
        }

        .product-img {
            width: 60px;
            height: 60px;
            object-fit: cover;
            border-radius: 8px;
            border: 1px solid rgba(0, 0, 0, 0.1);
        }

        .badge-category {
            background-color: rgba(115, 128, 236, 0.1);
            color: var(--color-primary);
            font-weight: 500;
            padding: 5px 12px;
            border-radius: 20px;
        }

        .stock-in {
            color: var(--color-success);
            font-weight: 600;
        }

        .stock-out {
            color: var(--color-danger);
            font-weight: 600;
        }

        .btn-view {
            background-color: var(--color-primary);
            color: white;
            border-radius: 6px;
            padding: 8px 15px;
            transition: all 0.3s ease;
        }

            .btn-view:hover {
                background-color: #5d6bd6;
                color: white;
                transform: translateY(-2px);
            }

        .btn-delete {
            background-color: var(--color-danger);
            color: white;
            border-radius: 6px;
            padding: 8px 15px;
            transition: all 0.3s ease;
        }

            .btn-delete:hover {
                background-color: #e04a4a;
                color: white;
                transform: translateY(-2px);
            }

        .btn-add {
            background-color: var(--color-primary);
            color: white;
            border-radius: 6px;
            padding: 10px 25px;
            font-weight: 500;
            transition: all 0.3s ease;
        }

            .btn-add:hover {
                background-color: #5d6bd6;
                color: white;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(115, 128, 236, 0.3);
            }

        /* Delete Confirmation Modal Styles */
        .modal-confirm {
            color: var(--color-dark);
        }

            .modal-confirm .modal-content {
                border: none;
                border-radius: var(--card-border-radius);
                overflow: hidden;
                box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            }

            .modal-confirm .modal-header {
                background: var(--color-danger);
                color: white;
                border-bottom: none;
                position: relative;
                padding: 20px;
            }

                .modal-confirm .modal-header .btn-close {
                    position: absolute;
                    top: 15px;
                    right: 15px;
                    color: white;
                    filter: invert(1);
                }

            .modal-confirm .modal-title {
                font-weight: 600;
                text-align: center;
                width: 100%;
                font-size: 1.5rem;
            }

            .modal-confirm .modal-body {
                padding: 30px;
                text-align: center;
                font-size: 1.1rem;
            }

                .modal-confirm .modal-body i {
                    font-size: 5rem;
                    color: var(--color-danger);
                    margin-bottom: 20px;
                    display: block;
                }

            .modal-confirm .modal-footer {
                background: var(--color-light-gray);
                border-top: none;
                padding: 20px 30px;
                justify-content: center;
            }

            .modal-confirm .btn {
                min-width: 120px;
                font-weight: 500;
                padding: 10px 20px;
                border-radius: var(--card-border-radius);
                transition: all 0.3s;
            }

            .modal-confirm .btn-danger {
                background: var(--color-danger);
                border-color: var(--color-danger);
            }

                .modal-confirm .btn-danger:hover {
                    background: #e04a4a;
                    border-color: #e04a4a;
                    transform: translateY(-2px);
                }

            .modal-confirm .btn-secondary {
                background: var(--color-light);
                color: var(--color-dark);
                border-color: var(--color-light);
            }

                .modal-confirm .btn-secondary:hover {
                    background: #e0e0e0;
                    border-color: #e0e0e0;
                    transform: translateY(-2px);
                }

            .modal-confirm .btn i {
                margin-right: 8px;
            }

        /* Responsive styles */
        @@media (max-width: 768px) {
            .table-responsive

        {
            border: 1px solid #dee2e6;
            border-radius: var(--card-border-radius);
            overflow: hidden;
        }

        .table thead {
            display: none;
        }

        .table tr {
            display: block;
            margin-bottom: 15px;
            border-bottom: 2px solid #f1f1f1;
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
        }

        .table td {
            display: flex;
            justify-content: space-between;
            align-items: center;
            text-align: right;
            padding-left: 50%;
            position: relative;
            border-top: 1px solid #f1f1f1;
        }

            .table td::before {
                content: attr(data-label);
                position: absolute;
                left: 20px;
                width: 45%;
                padding-right: 15px;
                font-weight: 600;
                color: var(--color-dark);
                text-align: left;
            }

            .table td:last-child {
                border-bottom: none;
            }

        .action-buttons {
            justify-content: flex-end;
            width: 100%;
        }

        }
    </style>
</head>
<body>
    <div class="container py-5">
        <!-- Page Header -->
        <div class="page-header text-center mb-4">
            <h1 class="display-5 fw-bold">Listed Products</h1>
            <p class="product-count mt-3 text-start">You have listed <span>@Model.Count</span> products</p>
        </div>

        <!-- Products Table -->
        <div class="card mb-4">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Product Name</th>
                                <th>Product Code</th>
                                <th>Category</th>
                                <th>Quantity</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model)
                            {
                                <tr>
                                    <td data-label="Image">
                                        <img src="~/@product.productThumbnailURL" alt="@product.productName" class="product-img">
                                    </td>
                                    <td data-label="Product Name">
                                        <strong>@product.productName</strong>
                                    </td>
                                    <td data-label="Product Code">@product.productCode</td>
                                    <td data-label="Category">
                                        <span class="badge-category">@product.productCategory</span>
                                    </td>
                                    <td data-label="Quantity" class="@(product.stock > 0 ? "stock-in" : "stock-out")">
                                        @product.stock
                                    </td>
                                    <td data-label="Actions">
                                        <div class="d-flex action-buttons">
                                            <a href="/Shopkeeper/DetailsOfProduct?productCode=@product.productCode" class="btn btn-view me-2">
                                                <i class="fas fa-eye me-1"></i> View
                                            </a>
                                            <!-- Updated form to use productCode -->
                                            <form id="deleteForm-@product.productCode" asp-action="DeleteProduct" asp-controller="Shopkeeper" method="post">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="productCode" value="@product.productCode">
                                                <button type="button" class="btn btn-delete" data-bs-toggle="modal" data-bs-target="#deleteModal" data-product-code="@product.productCode">
                                                    <i class="fas fa-trash me-1"></i> Delete
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr> 
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Add Product Button -->
        <div class="text-end">
            <a href="@Url.Action("RegisterProduct", "Shopkeeper")" class="btn btn-add">
                <i class="fas fa-plus-circle me-2"></i> Add New Product
            </a>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this product? This action cannot be undone.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" id="confirmDelete">Delete</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Minimal JavaScript for modal confirmation -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const deleteModal = document.getElementById('deleteModal');
            let productCodeToDelete = null;
            let deleteForm = null;

            // When delete button is clicked, store the product code and form
            deleteModal.addEventListener('show.bs.modal', function(event) {
                const button = event.relatedTarget;
                productCodeToDelete = button.getAttribute('data-product-code');
                deleteForm = document.getElementById('deleteForm-' + productCodeToDelete);
            });

            // When confirm delete is clicked, submit the correct form
            document.getElementById('confirmDelete').addEventListener('click', function() {
                if (deleteForm) {
                    deleteForm.submit();
                }
            });

            // Add data-label attributes for mobile responsive table
            const headers = ['Image', 'Product Name', 'Product Code', 'Category', 'Quantity', 'Actions'];
            const cells = document.querySelectorAll('tbody td');

            cells.forEach((cell, index) => {
                const headerIndex = index % headers.length;
                cell.setAttribute('data-label', headers[headerIndex]);
            });
        });
    </script>
</body>
</html>