@section Styles {

                    <link href="~/css/Terms.css" rel="stylesheet" />

}


<body>
    <!--=============== MAIN ===============-->
    <main class="main">
        <!--=============== BREADCRUMB ===============-->
        <section class="breadcrumb">
            <ul class="breadcrumb__list flex container">
                <li><a href="index.html" class="breadcrumb__link">Home</a></li>
                <li><span class="breadcrumb__separator">›</span></li>
                <li><span class="breadcrumb__current">Terms and Conditions</span></li>
            </ul>
        </section>

        <!-- Main Content -->
        <div class="container terms-container">
            <!-- Hero Section -->
            <div class="terms-hero">
                <h1 class="text-center">
                    <i class="fas fa-file-contract"></i> Terms & Conditions
                </h1>
                <p class="hero-subtitle">Last updated: <span id="current-date"></span></p>
                <div class="hero-divider">
                    <span class="divider-line"></span>
                    <span class="divider-dot">•</span>
                    <span class="divider-line"></span>
                </div>
                <p class="intro-text">Welcome to Stylora! These terms govern your use of our website and services. Please read them carefully.</p>
            </div>

            <!-- Main Content Sections -->
            <div class="terms-content">
                <!-- General Terms -->
                <div class="terms-section">
                    <div class="section-header">
                        <h2>
                            <span class="section-number">01</span>
                            General Terms
                        </h2>
                    </div>

                    <div class="terms-card">
                        <h3 class="card-title">
                            <i class="fas fa-check-circle"></i> Acceptance of Terms
                        </h3>
                        <p>By accessing this website, you agree to comply with and be bound by these terms and conditions. If you do not agree, please do not use our services.</p>
                    </div>

                    <div class="terms-card">
                        <h3 class="card-title">
                            <i class="fas fa-laptop"></i> Use of Website
                        </h3>
                        <p>You agree to use our website for lawful purposes only. Any unauthorized use may result in termination of access.</p>
                    </div>

                    <div class="terms-card">
                        <h3 class="card-title">
                            <i class="fas fa-copyright"></i> Intellectual Property
                        </h3>
                        <p>All content, logos, images, and text are the property of Stylora and may not be used without permission.</p>
                    </div>

                    <div class="terms-card">
                        <h3 class="card-title">
                            <i class="fas fa-shield-alt"></i> Privacy Policy
                        </h3>
                        <p>Your privacy is important to us. Please review our <a href="privacyPolicy.html" class="text-link">Privacy Policy</a> for details.</p>
                    </div>
                </div>

                <!-- Shipping & Delivery -->
                <div class="terms-section shipping-section">
                    <div class="section-header">
                        <h2>
                            <span class="section-number">02</span>
                            Shipping & Delivery
                        </h2>
                    </div>

                    <div class="shipping-grid">
                        <div class="shipping-card">
                            <div class="card-icon">
                                <i class="fas fa-shipping-fast"></i>
                            </div>
                            <h3>Shipping Fees</h3>
                            <ul class="shipping-list">
                                <li>
                                    <span class="price-range">Under PKR 3,000</span>
                                    <span class="price-amount">150</span>
                                </li>
                                <li>
                                    <span class="price-range">Above PKR 3,001</span>
                                    <span class="price-amount">250</span>
                                </li>
                            </ul>
                        </div>

                        <div class="shipping-card">
                            <div class="card-icon">
                                <i class="fas fa-clock"></i>
                            </div>
                            <h3>Delivery Timeline</h3>
                            <ul class="timeline-list">
                                <li>
                                    <span class="product-type">Luxury Pret</span>
                                    <span class="timeline">4-5 weeks</span>
                                </li>
                                <li>
                                    <span class="product-type">Formals</span>
                                    <span class="timeline">6-8 weeks</span>
                                </li>
                                <li>
                                    <span class="product-type">Bridals</span>
                                    <span class="timeline">8-12 weeks</span>
                                </li>
                                <li>
                                    <span class="product-type">Unstitched</span>
                                    <span class="timeline">7 days</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Refund Policy -->
                <div class="terms-section refund-section">
                    <div class="section-header">
                        <h2>
                            <span class="section-number">03</span>
                            Refund Policy
                        </h2>
                    </div>

                    <div class="refund-process">
                        <h3 class="process-title">
                            <i class="fas fa-exchange-alt"></i> How to Request a Refund
                        </h3>
                        <ol class="process-steps">
                            <li>Email us at <a href="mailto:customercare@stylora.com" class="text-link">customercare@stylora.com</a> or call +92 316 7776158 (Mon-Sat, 10am-6pm PST)</li>
                            <li>Provide your order number and original receipt</li>
                            <li>Submit a detailed reason for your refund request</li>
                            <li>Return the purchase within 14 days of receiving your order</li>
                        </ol>
                    </div>

                    <div class="eligibility-grid">
                        <div class="eligibility-card eligible">
                            <h4 class="card-header">
                                <i class="fas fa-check"></i> Eligible for Refund
                            </h4>
                            <ul>
                                <li>Delayed by brand (after 14 working days)</li>
                                <li>Out of stock items</li>
                                <li>Approved returns received at our warehouse</li>
                                <li>Exchange balance amounts</li>
                                <li>Post-delivery issues reported within 24 hours</li>
                            </ul>
                        </div>

                        <div class="eligibility-card not-eligible">
                            <h4 class="card-header">
                                <i class="fas fa-times"></i> Not Eligible for Refund
                            </h4>
                            <ul>
                                <li>Violation of care instructions</li>
                                <li>Missing proof within 24 hours</li>
                                <li>Tampered packaging</li>
                                <li>Change of mind after 48 hours</li>
                                <li>Bridal order advance payments</li>
                            </ul>
                        </div>
                    </div>

                    <div class="refund-timeline">
                        <h4 class="timeline-title">
                            <i class="fas fa-clock"></i> Refund Processing Times
                        </h4>
                        <div class="timeline-table">
                            <div class="table-header">
                                <div class="header-cell">Payment Method</div>
                                <div class="header-cell">Refund Option</div>
                                <div class="header-cell">Processing Time</div>
                            </div>
                            <div class="table-row">
                                <div class="table-cell">Credit/Debit Card</div>
                                <div class="table-cell">Same Card</div>
                                <div class="table-cell">7-14 Business Days</div>
                            </div>
                            <div class="table-row">
                                <div class="table-cell">Bank Transfer</div>
                                <div class="table-cell">Store Credit / Bank Refund</div>
                                <div class="table-cell">7-14 Business Days</div>
                            </div>
                            <div class="table-row">
                                <div class="table-cell">Cash on Delivery</div>
                                <div class="table-cell">Store Credit</div>
                                <div class="table-cell">2 Business Days</div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Disclaimers -->
                <div class="terms-section disclaimer-section">
                    <div class="section-header">
                        <h2>
                            <span class="section-number">04</span>
                            Important Disclaimers
                        </h2>
                    </div>

                    <div class="disclaimer-card">
                        <h3 class="disclaimer-title">
                            <i class="fas fa-palette"></i> Color Variation Disclaimer
                        </h3>
                        <p>Product colors may vary slightly from website images due to monitor settings. Contact us for exact color details.</p>
                    </div>

                    <div class="disclaimer-card">
                        <h3 class="disclaimer-title">
                            <i class="fas fa-ruler-combined"></i> Size Disclaimer
                        </h3>
                        <p>Sizing may vary slightly due to manufacturing processes. Refer to our size guides for accurate measurements.</p>
                    </div>

                    <div class="size-guide">
                        <h3 class="guide-title">
                            <i class="fas fa-tshirt"></i> Size Guide
                        </h3>
                        <div class="guide-content">
                            <div class="measurement-section">
                                <h4>Kameez Measurements (Inches)</h4>
                                <ul>
                                    <li><strong>Bust:</strong> Measure around fullest part</li>
                                    <li><strong>Waist:</strong> Measure above belly button</li>
                                    <li><strong>Hip:</strong> Measure widest part</li>
                                    <li><strong>Length:</strong> Shoulder to desired point</li>
                                </ul>
                            </div>
                            <div class="measurement-section">
                                <h4>Salwar Measurements (Inches)</h4>
                                <ul>
                                    <li><strong>Waist:</strong> Where you tie salwar</li>
                                    <li><strong>Length:</strong> Waist to desired length</li>
                                    <li><strong>Thigh:</strong> Fullest part measurement</li>
                                </ul>
                            </div>
                        </div>
                        <div class="guide-image">
                              <img src="~/img/size.png" class="home__img" alt="hats" />
                        </div>
                    </div>
                </div>

                <!-- Contact Section -->
                <div class="contact-section">
                    <h3 class="contact-title">
                        <i class="fas fa-question-circle"></i> Need Help?
                    </h3>
                    <p>Contact our customer service team for any questions regarding our terms and conditions.</p>
                    <div class="contact-methods">
                        <a href="mailto:support@stylora.com" class="contact-button email">
                            <i class="fas fa-envelope"></i> support@stylora.com
                        </a>
                        <a href="tel:+923167776158" class="contact-button phone">
                            <i class="fas fa-phone"></i> +92 316 7776158
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <script>
        // Add current date
        document.getElementById('current-date').textContent = new Date().toLocaleDateString('en-US', {
            year: 'numeric', 
            month: 'long', 
            day: 'numeric'
        });
    </script>
