@model List<Brand>
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Registered Brands</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .container-custom {
            margin-top: 50px;
            background-color: #ffffff;
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .table thead {
            background-color: #0d6efd;
            color: #fff;
        }

        .table tbody tr:hover {
            background-color: #f1f1f1;
        }

        .table th, .table td {
            vertical-align: middle;
        }

        .title {
            text-align: center;
            font-weight: bold;
            margin-bottom: 25px;
            color: #0d6efd;
        }

        .no-brands {
            text-align: center;
            padding: 30px;
            background-color: #f8f9fa;
            border-radius: 10px;
            margin-top: 20px;
        }

        .brand-logo {
            width: 80px;
            height: 80px;
            object-fit: contain;
            border-radius: 5px;
        }
        @@media (max-width: 768px) {
            .table-responsive

        {
            overflow-x: auto;
        }

        }
    </style>
</head>
<body>
    <div class="container container-custom">
        <h2 class="title">Registered Brands</h2>

        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Brand Logo</th>
                            <th>Brand Name</th>
                            <th>Niche</th>
                            <th>Social Link</th>
                            <th>Tag Line</th>
                            <th>Description</th>
                            <th>Registration Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var brand in Model)
                        {
                            <tr>
                                <td>
                                    @if (!string.IsNullOrEmpty(brand.brandLogoURL))
                                    {
                                        <img src="~/@Url.Content(brand.brandLogoURL)" class="brand-logo" alt="@brand.brandName logo">
                                    }
                                    else
                                    {
                                        <span class="text-muted">No logo</span>
                                    }
                                </td>
                                <td>@brand.brandName</td>
                                <td>@brand.niche</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(brand.socialLink))
                                    {
                                        <a href="@brand.socialLink" target="_blank" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-external-link-alt"></i> Visit
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not provided</span>
                                    }
                                </td>
                                <td>@brand.tagLine</td>
                                <td>@brand.description</td>
                                <td>@brand.brandRegistrationDate.ToString("dd MMM yyyy")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="no-brands">
                <i class="fas fa-store-slash fa-3x text-muted mb-3"></i>
                <h4>No Brands Available</h4>
                <p class="text-muted">There are currently no approved brands registered in our system.</p>
                <a href="/" class="btn btn-primary mt-2">Back to Home</a>
            </div>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</body>
</html>