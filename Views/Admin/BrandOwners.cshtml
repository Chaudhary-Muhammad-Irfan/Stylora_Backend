@model List<Brand>
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Brand Owners</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .container-custom {
            margin-top: 50px;
            background-color: #ffffff;
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .table thead {
            background-color: #0d6efd;
            color: #fff;
        }

        .table tbody tr:hover {
            background-color: #f1f1f1;
        }

        .table th, .table td {
            vertical-align: middle;
        }

        .title {
            text-align: center;
            font-weight: bold;
            margin-bottom: 25px;
            color: #0d6efd;
        }

        .no-brands {
            text-align: center;
            padding: 40px;
            background-color: #f8f9fa;
            border-radius: 10px;
            margin: 20px 0;
        }

            .no-brands i {
                font-size: 50px;
                color: #6c757d;
                margin-bottom: 15px;
            }

        .contact-link {
            color: #0d6efd;
            text-decoration: none;
        }

            .contact-link:hover {
                text-decoration: underline;
            }

        @@media (max-width: 768px) {
            .table-responsive {
                overflow-x: auto;
            }
        }
    </style>
</head>
<body>
    <div class="container container-custom">
        <h2 class="title">Brand Owners</h2>

        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Brand Name</th>
                            <th>Owner Name</th>
                            <th>Contact</th>
                            <th>CNIC</th>
                            <th>Bank</th>
                            <th>Account #</th>
                            <th>Account Holder Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var brand in Model)
                        {
                            <tr>
                                <td>@brand.brandName</td>
                                <td>@brand.brandOwnerName</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(brand.contact))
                                    {
                                        <a href="tel:@brand.contact" class="contact-link">
                                            <i class="fas fa-phone-alt me-2"></i>@brand.contact
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not provided</span>
                                    }
                                </td>
                                <td>@brand.cnic</td>
                                <td>@brand.bankName</td>
                                <td>@brand.accountNumber</td>
                                <td>@brand.accountHolderName</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="no-brands">
                <i class="fas fa-store-slash"></i>
                <h3>No Brand Owners Found</h3>
                <p class="text-muted">There are currently no registered brand owners in the system.</p>
                <a href="/" class="btn btn-primary mt-3">
                    <i class="fas fa-home me-2"></i>Return to Home
                </a>
            </div>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>