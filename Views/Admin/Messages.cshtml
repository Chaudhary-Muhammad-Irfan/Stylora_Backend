@model List<WebApplication1.Models.Contact>
@{
    Layout = null;
    int count = 1;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Contact Us Messages</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .container-custom {
            margin-top: 50px;
            background-color: #ffffff;
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .table thead {
            background-color: #0d6efd;
            color: #fff;
        }

        .table tbody tr:hover {
            background-color: #f1f1f1;
        }

        .table th, .table td {
            vertical-align: middle;
        }

        .title {
            text-align: center;
            font-weight: bold;
            margin-bottom: 25px;
            color: #0d6efd;
        }
        .unread-row {
            background-color: lightcoral;
            font-weight: bold;
        }

        @@media (max-width: 768px) {
            .table-responsive

        {
            overflow-x: auto;
        }

        }
    </style>
</head>
<body>
    <div class="container container-custom">
        <h2 class="title">Contact Us Messages</h2>
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Subject</th>
                        <th>Message</th>
                        <th>Time Sent</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        var rowClass = item.IsRead ? "" : "unread-row";
                        <tr class="@rowClass">
                            <td>@count</td>
                            <td>@item.Name</td>
                            <td>@item.Email</td>
                            <td>@item.Phone</td>
                            <td>@item.Subject</td>
                            <td>@item.Message</td>
                            <td>@item.createdAt.ToString("yyyy-MM-dd hh:mm tt")</td>
                        </tr>
                        count++;
                    }
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>